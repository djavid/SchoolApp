<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.djavid.schoolapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.LandingActivity" />
        <activity
            android:name=".view.activity.EnterCodeActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".view.activity.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.GroupsActivity"
            android:label="@string/title_nav_groups"
            android:parentActivityName=".view.activity.DashboardActivity" />
        <activity
            android:name=".view.activity.GenerateCodeActivity"
            android:label="@string/title_nav_create_code"
            android:parentActivityName=".view.activity.DashboardActivity" />
        <activity
            android:name=".view.activity.EventsActivity"
            android:label="@string/title_nav_events"
            android:parentActivityName=".view.activity.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.djavid.schoolapp.view.activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".view.activity.EventDetailsActivity"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".view.activity.EventsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.djavid.schoolapp.view.activity.EventsActivity" />
        </activity>
        <activity
            android:name=".view.activity.GroupDetailsActivity"
            android:label="GroupDetailsActivity"
            android:parentActivityName=".view.activity.GroupsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.GroupsActivity" />
        </activity>
        <activity
            android:name=".view.activity.PublishNotificationActivity"
            android:label="@string/publish_notification_title"
            android:parentActivityName=".view.activity.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.djavid.schoolapp.view.activity.DashboardActivity" />
        </activity>

        <service android:name=".firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".firebase.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>